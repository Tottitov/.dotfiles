#!/bin/sh

current=$(powerprofilesctl get)

profiles=$(printf "performance\nbalanced\npower-saver" | sed "s/^$current/& */")

choice=$(
	printf "%s" "$profiles" | fuzzel \
		-l 3 -w 15 -dip "Power: "
) || exit 1

choice=$(echo "$choice" | sed 's/ \*$//')

powerprofilesctl set "$choice" && notify-send "Profile" "$choice"
