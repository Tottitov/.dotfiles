#!/bin/sh

input() { fuzzel -di -l 10 -w 20 -p "$1"; }

delete() {
  deletion=$(cut -d ' ' -f 2 "$bookmarks" | input "Delete: ")
  if [ -n "$deletion" ]; then
    sed -i "/\b$deletion\b/d" "$bookmarks"
    notify-send -u critical "$name bookmark deleted"
  fi
}

add() {
  url=$(echo "" | input "Url: ") || exit 1
  name=$(echo "" | input "Name: ") || exit 1
  tag=$(echo "$tags" | input "Tag: ") || exit 1
  echo "$url $name $tag" >>"$bookmarks"
  notify-send "$name bookmark added"
}

bookmarks="${XDG_DATA_HOME}/bookmarks"

tags=$(cut -d ' ' -f 3 "$bookmarks" | sort -u)
tag=$(
  printf "Actions\n%s" "$tags" | input "Tag: "
) || exit 1

if [ "$tag" = "Actions" ]; then
  edit=$(
    printf "Add\nDelete\nOpen" | input "Option: "
  ) || exit 1

  case $edit in
  "Add") add ;;
  "Delete") delete ;;
  "Open") riverctl spawn "$TERMINAL -e $EDITOR $bookmarks" ;;
  esac
else
  bookmark=$(
    ugrep -w \
      "$tag" "$bookmarks" | cut -d ' ' -f 2 | sort | input "Bookmark: "
  ) || exit 1

  $BROWSER "$(ugrep -w "$bookmark $tag" "$bookmarks" | cut -d ' ' -f 1)"
fi
