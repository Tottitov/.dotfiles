#!/bin/sh

saveshot() {
	grim -g "$(slurp -d)" "pic-selected-$(date '+%y%m%d-%H%M-%S').png"
	notify-send "Screenshot saved"
}

savescreen() {
	grim "pic-full-$(date '+%y%m%d-%H%M-%S').png"
	notify-send "Fullscreen saved"
}

copyshot() {
	grim -g "$(slurp -d)" - | wl-copy
	notify-send "Screenshot copied"
}

copyscreen() {
	grim - | wl-copy
	notify-send "Fullscreen copied"
}

editshot() {
	grim -g "$(slurp -d)" - | swappy -f -
	notify-send "Screenshot copied"
}

editscreen() {
	grim - | swappy -f -
	notify-send "Fullscreen copied"
}

askscreenshot() {
	type=$(
		printf "save\ncopy\nedit" |
			tofi --prompt-text "Type: "
	) || exit 1

	screenshot=$(
		printf "shot\nscreen" |
			tofi --prompt-text "Screenshot: "
	) || exit 1

	case ${type}${screenshot} in
	"saveshot") saveshot ;;
	"savescreen") savescreen ;;
	"copyshot") copyshot ;;
	"copyscreen") copyscreen ;;
	"editshot") editshot ;;
	"editscreen") editscreen ;;
	esac
}

case "$1" in
"copyshot") copyshot ;;
"copyscreen") copyscreen ;;
*) askscreenshot ;;
esac
