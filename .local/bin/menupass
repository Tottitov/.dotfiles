#!/bin/sh

passwords=$(
	find "$PASSWORD_STORE_DIR" \
		-name "*.*.gpg" \
		-printf "%f\n" | sed 's/\.gpg$//'
)

password=$(
	echo "$passwords" | sort | tofi --prompt-text "Password: "
) || exit 1

pass -c "$password" >/dev/null 2>&1
notify-send "Copied $password to clipboard. Will clear in 45 seconds..."
