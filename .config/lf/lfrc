set previewer ~/.config/lf/preview

set shell dash
set scrolloff 4
set period 1
set sixel
set drawbox
set hidden
set ignorecase
set ifs "\n"

cmd open ${{
    case $(file --mime-type $f -b) in
        text/*|application/json) $EDITOR $f ;;
        application/pdf) setsid -f zathura $fx ;;
        video/*) setsid -f mpv $f --no-terminal ;;
        image/*) setsid -f imv -s full $f ;;
        *) xdg-open $f ;;
    esac
}}

map u clear
map <enter> shell
map <c-d> delete
map gc cd ~/.config
map sc cd ~/.local/bin
map gd cd ~/docs
map gl cd ~/media/downloads
map gm cd ~/media/music
map gp cd ~/media/pictures
map gv cd ~/media/videos
