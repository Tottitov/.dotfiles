set previewer ~/.config/lf/preview

set shell dash
set scrolloff 8
set period 1
set sixel
set drawbox
set hidden
set ignorecase

cmd open &{{
    case $(file -Lb --mime-type -- "$f") in
        application/pdf|application/epub) zathura "$fx" ;;
        audio/*) mpv --no-terminal "$fx" ;;
        video/*) mpv --no-terminal "$fx" ;;
        image/*) imv "$fx" ;;
        *) lf -remote "send $id \$$EDITOR \$fx" ;;
    esac
}}

cmd setbg "$1"

map u clear
map <enter> shell
map <c-s> set hidden!
map <c-d> delete
map gc cd ~/.config
map sc cd ~/.local/bin
map gd cd ~/documents
map gl cd ~/downloads
map gm cd ~/media/music
map gp cd ~/media/pictures
map gv cd ~/media/videos
map b $setbg $f
