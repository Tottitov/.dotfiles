set previewer ~/.config/lf/preview

set shell dash
set scrolloff 5
set period 1
set sixel
set drawbox
set hidden
set ignorecase

cmd open ${{
    case $(file -Lb --mime-type "$f") in
    text/*|application/json) $EDITOR "$f" ;;
    application/pdf) setsid -f zathura "$f" ;;
    audio/*) setsid -f mpv --really-quiet "$f" ;;
    video/*) setsid -f mpv --really-quiet "$f" ;;
    image/*) setsid -f imv "$f" ;;
    *) xdg-open "$f" ;;
    esac
}}

cmd wallpaper "$1"

map u clear
map <enter> shell
map <c-s> set hidden!
map <c-d> delete
map gc cd ~/.config
map sc cd ~/.local/bin
map gd cd ~/documents
map gl cd ~/downloads
map gm cd ~/media/music
map gp cd ~/media/pictures
map gv cd ~/media/videos
map b $wallpaper $f
