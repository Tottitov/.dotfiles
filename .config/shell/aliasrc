#!/bin/sh

sc() {
	script=$(find ~/.local/bin -mindepth 1 -printf '%P\n' | fzf)
	[ -f ~/.local/bin/"${script}" ] && $EDITOR ~/.local/bin/"${script}"
}

cf() {
    config=$(find ~/.config -mindepth 2 -printf '%P\n' | fzf)
    [ -f ~/.config/"${config}" ] && $EDITOR ~/.config/"${config}"
}

alias \
    vim="nvim" \
    ls="ls -ahN --color=auto --group-directories-first" \
    grep="grep --color=auto" \
    ca="khal calendar today 7d" \
    ug="sudo pacman -Syu" \
    rip="whipper cd rip" \
    tag="beet import -i ~/media/music/" \
    sf="scanimage --source 'ADF' -b --format=png" \
    sb="scanimage --format=png --output-file scan.png -p"
