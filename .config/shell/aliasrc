#!/bin/sh

sc() {
	script=$(find ~/.local/bin -mindepth 1 -printf '%P\n' | fzf)
	[ -n "$script" ] && $EDITOR "${HOME}/.local/bin/${script}"
}

cf() {
    config=$(find ~/.config -mindepth 2 -printf '%P\n' | fzf)
    [ -n "$config" ] && $EDITOR "${XDG_CONFIG_HOME}/${config}"
}

alias \
    vim="nvim" \
    ls="eza -la --color=auto --group-directories-first" \
    grep="ugrep --color=auto" \
    ca="khal calendar today 30d" \
    up="sudo pacman -Syu" \
    rip="whipper cd rip" \
    tag="beet import -i ~/media/music/" \
    sf="scanimage --source 'ADF' -b --format=png" \
    sb="scanimage --format=png --output-file scan.png -p"
