profile docked {
    output "Acer Technologies SB220Q 0x82001DF5" scale 1
    output eDP-1 disable
    exec nmcli radio wifi off
    exec nmcli dev connect eth0
}

profile undocked {
    output eDP-1 enable scale 1
    exec nmcli radio wifi on
    exec nmcli dev disconnect eth0
}

profile hdmi {
    output HDMI-A-1 mode 1920x1080@100Hz scale 1
    output eDP-1 disable
}
